<%- include("./partials/head.ejs")%>
<body>
    <header class="header">
        <div class="headerMain">
          <div class="headerLogo">
            <a href="/home"><img src="\images\logo.png" alt="FedeFlix" width="65%"></a>
          </div>
          <div class="headerSearch">
          </div>
          <div class="PanelAdminText">
            <h3>Panel de administrador</h3>
          </div>
        </div>
    </header>
    <main>
        <form class="formulario" style="text-align: center;" action="/edit?_method=PUT" method="POST">
            <h1 style="margin-bottom: 15px;">Editar usuario</h1>
            <ul type="none" style="text-align: center; text-align: center;">
                <li>
                    <div>
                        <label>Id</label><br>
                        <input type="text" name="id" value="<%= usuarios.id%>" readonly>
                    </div>
                    <div style="margin-top: 10px;">
                        <label>Nombre</label><br>
                        <input type="text" name="nombre" value="<%= usuarios.nombre%>" required>
                    </div>
                    <div style="margin-top: 10px;">
                        <label>Apellido</label><br>
                        <input type="text" name="apellido" value="<%= usuarios.apellido%>" required>
                    </div>
                    <div style="margin-top: 10px;">
                        <label>Email</label><br>
                        <input type="text" name="email" value="<%= usuarios.email%>" readonly>
                    </div>
                    <div style="margin-top: 10px;">
                        <label>Contrase√±a</label><br>
                        <input type="password" name="contrasenia" value="<%= usuarios.contrasenia%>" required>
                    </div>
                    <div style="margin-top: 10px;">
                        <label>Imagen</label><br>
                        <img src="\images\users\<%= usuarios.img%>" width="405px" name="img" height="300px">
                    </div>
                </li>
            </ul>
            <button class="button" style="width: 95%; margin-bottom: 20px; margin-top: 20px;" type="submit">Guardar cambios</button>
            <p><a class="link" href="/users2">Cancelar</a></p>
        </form>
    </main> 
<%- include("./partials/footer.ejs")%>
</body>
