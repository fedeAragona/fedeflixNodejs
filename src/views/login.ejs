<%- include("./partials/head.ejs")%>
<body>
  <header class="header">
    <div class="headerMain">
      <div class="headerLogo">
        <a href="/home"><img src="\images\logo.png" alt="FedeFlix" width="65%"></a>
      </div>
      <div class="headerSearch">
        <form action="">
          <input id="search" type="text" style="width: 52%;" placeholder="Buscar películas...">
        </form>
      </div>
      <div class="headerNavLogin">
        <ul type="none">
          <li>
            <a href="/login">ACCEDER 
              <i class="fa-solid fa-user"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <nav class="headerNav">
      <div class="headerNavItems">
        <ul type="none" style="border-top: 1px solid gray; margin-bottom: 0px;">
          <li>
            <a href="/home">omdb API Pelis</a>
          </li>
          <li>
            <a href="/nuestrasPelis">Nuestras Pelis</a>
          </li>
          <li>
            <a href="/aboutUs">Nosotros</a>
          </li>
            <li>
          <a href="/contact">Contacto</a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
  <main>
    <form class="formulario" style="text-align: center;" method="POST" action="/login">
      <h1>Iniciar sesión</h1>
      <%if(usuario != 0){%>
        <%if(usuario == 1){%>
          <div class="errores">
            <ul>
              <li type="none" style="color: red; margin-top: 10px;">La cuenta fue dada de baja</li>
            </ul>
          </div>
        <%}else{%>
          <div class="errores">
            <ul>
              <li type="none" style="color: red; margin-top: 10px;">El email y/o la contraseña no coinciden</li>
            </ul>
          </div>
        <%}%>
      <%}%>
      <div class="contenedor">
        <div class="input-contenedor">
          <i class="fas fa-envelope icon"></i>
          <input type="email" placeholder="Correo Electronico" name="email" required>
        </div>
        <div class="input-contenedor">
          <i class="fas fa-key icon"></i>
          <input type="password" placeholder="Contraseña" name="password" required>
        </div>
          <input type="submit" value="Ingresar" class="button">
          <p style="font-size: small; margin: 2%;">Al registrarte, aceptas nuestras Condiciones de uso y Política de privacidad.</p>
          <p>¿No tienes una cuenta? <a class="link" href="/register">Registrate </a></p>
      </div>
    </form>
  </main>
<%- include("./partials/footer.ejs")%>
</body>