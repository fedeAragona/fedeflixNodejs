<%- include("./partials/head.ejs")%>
<body>
    <header class="header">
        <div class="headerMain">
          <div class="headerLogo">
            <a href="/home"><img src="\images\logo.png" alt="FedeFlix" width="65%"></a>
          </div>
          <div class="headerSearch">
          </div>
          <div class="PanelAdminText">
            <h3>Panel de administrador</h3>
          </div>
        </div>
    </header>
    <main>
        <div class="formulario" style="padding: 15px;">
            <ul type="none">     
                <form action="/editPelicula?_method=PUT" method="post" enctype="multipart/form-data">
                    <h1 style="margin-bottom: 15px;">Modificar pelicula</h1>
                    <li>
                        <div class="input-contenedor">
                            <div class="iconAdmin">
                                <i>ID</i>
                                <input type="text" placeholder="id" name="id" value="<%=pelicula.id%>" readonly>
                            </div>
                        </div>
                        <div class="input-contenedor">
                            <div class="iconAdmin">
                                <i class="fa-solid fa-pencil"></i>
                                 <input type="text" placeholder="Nombre" name="nombre" value="<%= pelicula.nombre%>" required>
                            </div>
                        </div>
                        <div class="input-contenedor">
                            <div class="iconAdmin">
                                <i class="fa-solid fa-file-signature"></i>
                                <input type="text" placeholder="Descripcion" name="descripcion" value="<%= pelicula.descripcion%>" required>
                            </div>
                        </div>
                        <div class="input-contenedor">
                            <div class="iconAdmin">
                                <i class="fa-solid fa-star"></i>
                                <input style="margin-left: 5px;" type="number" min="0.0" max="10.0" step="0.1" placeholder="Rating" name="rating" value="<%= pelicula.rating%>" required>
                            </div>
                        </div>
                        <div class="input-contenedor">
                            <div class="iconAdmin">
                                <i class="fa-solid fa-bars"></i>
                                <input type="text" placeholder="Genero" name="genero" value="<%= pelicula.genero%>">
                            </div>
                        </div>
                        <div class="input-contenedor">
                            <div class="iconAdmin">
                                <i class="fa-solid fa-clock"></i>
                                <input type="number" placeholder="Duracion de la pelicula (min)" name="duracion" value="<%= pelicula.duracion%>" required>
                            </div>
                        </div>
                        <div class="input-contenedor">
                            <div>
                                <%if(pelicula.img.startsWith("http")){%>
                                    <img src="<%=pelicula.img%>" width="100%" name="img1" height="300px">
                                <%}else{%>
                                    <img src="\images\peliculas\<%=pelicula.img%>" width="100%" name="img1" height="300px">
                                <%}%>
                            </div>
                        </div>
                        <div class="input-contenedor">
                            <div class="iconAdmin">
                                <i class="fa-solid fa-image"></i>
                                <input type="file" placeholder="Imagen" name="img2" value="\images\peliculas\<%=pelicula.img%>">
                            </div>
                        </div>
                    </li>
                    <div>
                        <button class="buttonEditar" style="width: 95%; margin-bottom: 15px;" type="submit">Guardar cambios</button>
                    </div>
                </form> 
            </ul>
            <p style="margin-top: 15px; margin-bottom: 15px;"><a class="link" href="/adminListarPeliculas">Volver atras</a></p>
        </div>
    </main>
<%- include("./partials/footer.ejs")%>
</body>