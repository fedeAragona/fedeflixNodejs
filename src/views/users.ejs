<%- include("./partials/head.ejs")%>

<body>
    <form class="formulario">
    
        <h1 style="margin-bottom: 15px;">Todos los usuarios</h1>
             
        

        <ul type="none">
            <% for(let i = 0; i < allUsers.length; i++) {%>
                <li>
                    <p>
                        <div style="margin-bottom: 9px; text-align: center;">
                            <input type="text" value="<%= allUsers[i].id%>     <%= allUsers[i].name%>" readonly>
                            <a class="button" style="padding: 6px;" href="/editUser/<%= allUsers[i].id%>">Editar</a>
                        </div>
                    </p>
                </li>
            <%}%>
        </ul>
        <p style="margin-top: 15px; margin-bottom: 15px;"><a class="link" href="/admin">Volver atras</a></p>
    </form>

    <%- include("./partials/footer.ejs")%>
</body>
</html>