<%- include("./partials/head.ejs")%>
<body>
    <header class="header">
        <div class="headerMain">
            <div class="headerLogo">
                <a href="/home"><img src="\images\logo.png" alt="FedeFlix" width="65%"></a>
            </div>
                <div class="headerSearch">
            </div>
            <div class="PanelAdminText">
                <h3>Panel de administrador</h3>
            </div>
        </div>
    </header>
    <main>
        <div class="formulario">
            <h1 style="margin-bottom: 15px;">Todas las peliculas</h1>
            <ul type="none">
                <% for(let i = 0; i < peliculas.length; i++) {%>
                    <li>
                        <div style="margin: 10px; text-align: center; display: flex; flex-direction: row;">
                            <input style="width: 80%;" type="text" value="<%= peliculas[i].id%>     <%= peliculas[i].nombre%>" readonly>
                            <a class="buttonEditar" style="width: auto; padding: 8px; margin-left: 10px;" href="/search?id=<%=peliculas[i].id%>">Editar</a>
                            <div>
                                <form action="/deletePelicula/<%=peliculas[i].id%>?_method=DELETE" method="POST">
                                    <button class="buttonEditar" style="width: auto; background-color: rgb(122, 7, 7); margin-left: 10px;" type="submit">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    </li>
                <%}%>
            </ul>
            <p style="margin-top: 15px; margin-bottom: 15px;"><a class="link" href="/adminModiPeliculas">Volver atras</a></p>
        </div>
    </main>
<%- include("./partials/footer.ejs")%>
</body>